{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "lib": [
      "es6",
      "es2021"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "bin",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "node_modules/@types/node/globals.d.ts"
  ],
  "types": ["node"]
}
